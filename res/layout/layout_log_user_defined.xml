                    android:text="@string/slog_defined_eventmontor_log"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_eventmonitor_log"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
