                <ImageView
                    android:id="@+id/iv_dsp_pcm_log"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/checkbox_on" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_tcpip_log"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_tcpip_log"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/iv_tcpip_log"
                    android:gravity="center_vertical"
                    android:text="@string/ylog_defined_cap_log"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_tcpip_log"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/checkbox_off" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_orcaap_log"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_miniap_log"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/iv_miniap_log"
                    android:gravity="center_vertical"
                    android:text="@string/slog_defined_miniap_log"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_orcaap_log"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/checkbox_on" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_orcadp_log"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_orcadp_log"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/iv_orcadp_log"
                    android:gravity="center_vertical"
                    android:text="@string/slog_defined_minidp_log"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_orcadp_log"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/checkbox_on" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_eventmonitor_log"
                android:layout_width="fill_parent"
