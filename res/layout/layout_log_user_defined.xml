                    android:text="@string/slog_defined_wcnlog_1"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_cp_bt_log"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/checkbox_on" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_gps_log"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_gps_log"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/iv_gps_log"
                    android:gravity="center_vertical"
                    android:text="@string/ylog_defined_wcnlog_2"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_gps_log"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/checkbox_on" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000" />

            <!-- other log -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ylog_defined_otherlog"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/rl_cm4_log"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_cm4_log"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/iv_cm4_log"
                    android:gravity="center_vertical"
                    android:text="@string/ylog_defined_cm4_log"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_cm4_log"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/checkbox_on" />
            </RelativeLayout>
            <!-- @} -->

            <RelativeLayout
                android:id="@+id/rl_ag_dsp_dump_log"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_ag_dsp_dump_log"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/iv_ag_dsp_dump_log"
                    android:gravity="center_vertical"
                    android:text="@string/ag_dsp_pcm_dump_log"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_ag_dsp_dump_log"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/checkbox_on" />
            </RelativeLayout>

            <!-- SPRD: add AG-DSP log in EngineerMode @{ -->

            <RelativeLayout
                android:id="@+id/rl_ag_dsp_log"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_ag_dsp_log"
                    android:layout_alignParentLeft="true"
